# Restart Yabai
fn + ctrl + lalt + lcmd - y :
    /usr/bin/env osascript <<< \
    "display notification \"Restarting Yabai\" with title \"Yabai\""; \
    launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# Show system statistics
fn + ctrl + lalt + lcmd - h    : "${HOME}"/.config/yabai/scripts/show_cpu.sh
fn + ctrl + lalt + lcmd - j    : "${HOME}"/.config/yabai/scripts/show_mem.sh
fn + ctrl + lalt + lcmd - k    : "${HOME}"/.config/yabai/scripts/show_bat.sh
fn + ctrl + lalt + lcmd - l    : "${HOME}"/.config/yabai/scripts/show_disk.sh
fn + ctrl + lalt + lcmd - 0x29 : "${HOME}"/.config/yabai/scripts/show_song.sh

# Focus space
lalt - 0x29 : yabai -m space --focus recent # semi colon
lalt - h    : yabai -m space --focus prev || yabai -m space --focus last
lalt - j    : yabai -m space --focus prev || yabai -m space --focus last
lalt - k    : yabai -m space --focus next || yabai -m space --focus first
lalt - l    : yabai -m space --focus next || yabai -m space --focus first
lalt - p    : yabai -m space --focus prev || yabai -m space --focus last
lalt - n    : yabai -m space --focus next || yabai -m space --focus first

# Move space
lalt + shift - h : yabai -m space --move prev || yabai -m space --move last
lalt + shift - j : yabai -m space --move prev || yabai -m space --move last
lalt + shift - k : yabai -m space --move next || yabai -m space --move first
lalt + shift - l : yabai -m space --move next || yabai -m space --move first
lalt + shift - p : yabai -m space --move prev || yabai -m space --move last
lalt + shift - n : yabai -m space --move next || yabai -m space --move first
lalt + shift - u : yabai -m space --display 3
lalt + shift - i : yabai -m space --display 1
lalt + shift - o : yabai -m space --display 2

# Move window to space
lalt + ctrl - 0x29 : yabai -m window --space recent || yabai -m space  --focus recent; \
lalt + ctrl - h    : yabai -m window --space prev   || yabai -m window --space last; \
                     yabai -m space  --focus prev   || yabai -m space  --focus last;
lalt + ctrl - j    : yabai -m window --space next   || yabai -m window --space first; \
                     yabai -m space  --focus next   || yabai -m space  --focus first;
lalt + ctrl - k    : yabai -m window --space prev   || yabai -m window --space last; \
                     yabai -m space  --focus prev   || yabai -m space  --focus last;
lalt + ctrl - l    : yabai -m window --space next   || yabai -m window --space first; \
                     yabai -m space  --focus next   || yabai -m space  --focus first;
lalt + ctrl - p    : yabai -m window --space prev   || yabai -m window --space last; \
                     yabai -m space  --focus prev   || yabai -m space  --focus last;
lalt + ctrl - n    : yabai -m window --space next   || yabai -m window --space first; \
                     yabai -m space  --focus next   || yabai -m space  --focus first;

# Focus display
ctrl + lcmd + rcmd - 0x29 : yabai -m display --focus recent # semi colon
ctrl + lcmd - left        : yabai -m display --focus prev || yabai -m display --focus last
ctrl + lcmd - down        : yabai -m display --focus next || yabai -m display --focus first
ctrl + lcmd - up          : yabai -m display --focus prev || yabai -m display --focus last
ctrl + lcmd - right       : yabai -m display --focus next || yabai -m display --focus first
ctrl + lcmd + rcmd - p    : yabai -m display --focus prev || yabai -m display --focus last
ctrl + lcmd + rcmd - n    : yabai -m display --focus next || yabai -m display --focus first
ctrl + lcmd + rcmd - u    : yabai -m display --focus 3
ctrl + lcmd + rcmd - i    : yabai -m display --focus 1
ctrl + lcmd + rcmd - o    : yabai -m display --focus 2

# Move window to display
ctrl + shift + lcmd + rcmd - 0x29 : yabai -m window  --display recent || yabai -m display --focus   recent; \
ctrl + shift + lcmd - left        : yabai -m window  --display prev   || yabai -m window  --display last; \
                                    yabai -m display --focus   prev   || yabai -m display --focus   last;
ctrl + shift + lcmd - down        : yabai -m window  --display next   || yabai -m window  --display first; \
                                    yabai -m display --focus   next   || yabai -m display --focus   first;
ctrl + shift + lcmd - up          : yabai -m window  --display prev   || yabai -m window  --display last; \
                                    yabai -m display --focus   prev   || yabai -m display --focus   last;
ctrl + shift + lcmd - right       : yabai -m window  --display next   || yabai -m window  --display first; \
                                    yabai -m display --focus   next   || yabai -m display --focus   first;
ctrl + shift + lcmd + rcmd - p    : yabai -m window  --display prev   || yabai -m window  --display last; \
                                    yabai -m display --focus   prev   || yabai -m display --focus   last;
ctrl + shift + lcmd + rcmd - n    : yabai -m window  --display next   || yabai -m window  --display first; \
                                    yabai -m display --focus   next   || yabai -m display --focus   first;

# Manage space
alt - 0x18       : yabai -m space --balance # equalize size of all windows - =
ralt - c         : yabai -m space --create && yabai -m space --focus next
ralt - d         : yabai -m space --destroy
ralt - r         : yabai -m space --rotate 270 # rotate clockwise
ralt + shift - r : yabai -m space --rotate 90 # rotate counter clockwise
ralt - x         : yabai -m space --mirror x-axis # rotate on X axis
lalt - y         : yabai -m space --mirror y-axis # rotate on Y axis
ralt - g         : yabai -m space --toggle gap; \
                   yabai -m space --toggle padding # toggle gaps

# Manage window
ralt - s : yabai -m window --toggle split # toggle h or v split
ralt - b : yabai -m window --toggle border # toggle active window border
ralt - o : yabai -m config window_opacity on # toggle window opacity
ralt + shift - o : yabai -m config window_opacity off # toggle window opacity

# Focus window
ralt - h     : yabai -m window --focus west
ralt - j     : yabai -m window --focus south
ralt - k     : yabai -m window --focus north
ralt - l     : yabai -m window --focus east
ralt - p     : yabai -m window --focus prev || yabai -m window --focus last
ralt - n     : yabai -m window --focus next || yabai -m window --focus first
ralt - 0x29  : yabai -m window --focus recent # semi colon

# Swap windows
ralt + shift - h    : yabai -m window --swap west
ralt + shift - j    : yabai -m window --swap south
ralt + shift - k    : yabai -m window --swap north
ralt + shift - l    : yabai -m window --swap east
ralt + shift - p    : yabai -m window --swap prev
ralt + shift - n    : yabai -m window --swap next
ralt + shift - i    : yabai -m window --swap first
ralt + shift - o    : yabai -m window --swap last
ralt + shift - 0x29 : yabai -m window --swap recent # semi colon
ralt + shift - 0x24 : yabai -m window --toggle zoom-fullscreen # maximize - return

# Warp windows
ralt + ctrl - h    : yabai -m window --warp west
ralt + ctrl - j    : yabai -m window --warp south
ralt + ctrl - k    : yabai -m window --warp north
ralt + ctrl - l    : yabai -m window --warp east
ralt + ctrl - p    : yabai -m window --warp prev
ralt + ctrl - n    : yabai -m window --warp next
ralt + ctrl - i    : yabai -m window --warp first
ralt + ctrl - o    : yabai -m window --warp last
ralt + ctrl - 0x29 : yabai -m window --warp recent # semi colon
ralt + ctrl - 0x24 : yabai -m window --toggle zoom-fullscreen # maximize - return

# Resize windows
ralt + shift + ctrl - h    : yabai -m window --resize left:-20:0 ; \
                             yabai -m window --resize right:-20:0
ralt + shift + ctrl - j    : yabai -m window --resize bottom:0:20 ; \
                             yabai -m window --resize top:0:20
ralt + shift + ctrl - k    : yabai -m window --resize top:0:-20 ; \
                             yabai -m window --resize bottom:0:-20
ralt + shift + ctrl - l    : yabai -m window --resize right:20:0 ; \
                             yabai -m window --resize left:20:0
ralt + shift + ctrl - 0x18 : yabai -m space --balance # equalize size of all windows - =

# # Set window insertion point
# ralt + lalt - h : yabai -m window --insert west
# ralt + lalt - j : yabai -m window --insert south
# ralt + lalt - k : yabai -m window --insert north
# ralt + lalt - l : yabai -m window --insert east

# Move and resize floated window
ctrl + lcmd - space   : yabai -m window --toggle float
ctrl + rshift - space : yabai -m window --toggle float

ctrl + lcmd - h       : yabai -m window --grid 1:2:0:0:1:1 # left half
ctrl + lcmd - j       : yabai -m window --grid 2:1:0:1:1:1 # bottom half
ctrl + lcmd - k       : yabai -m window --grid 2:1:0:0:1:1 # top half
ctrl + lcmd - l       : yabai -m window --grid 1:2:1:0:1:1 # right half

ctrl + lcmd - y       : yabai -m window --grid 2:2:0:0:1:1 # top left
ctrl + lcmd - p       : yabai -m window --grid 2:2:1:0:1:1 # top right - left square bracket
ctrl + lcmd - n       : yabai -m window --grid 2:2:0:1:1:1 # bottom left
ctrl + lcmd - 0x2C    : yabai -m window --grid 2:2:1:1:1:1 # bottom right - backslash

ctrl + lcmd - u       : yabai -m window --grid 1:3:0:0:1:1 # left third
ctrl + lcmd - i       : yabai -m window --grid 1:3:1:0:1:1 # center third
ctrl + lcmd - o       : yabai -m window --grid 1:3:2:0:1:1 # right third

ctrl + lcmd - m       : yabai -m window --grid 1:3:0:0:2:1 # left two thirds - right square bracket
ctrl + lcmd - 0x2B    : yabai -m window --grid 1:6:1:0:4:1 # center two thirds - comma
ctrl + lcmd - 0x2F    : yabai -m window --grid 1:3:1:0:2:1 # right two thirds - period

ctrl + rshift - t     : yabai -m window --grid 3:1:0:0:1:2 # top two thirds
ctrl + rshift - g     : yabai -m window --grid 6:1:0:1:1:4 # middle two thirds
ctrl + rshift - b     : yabai -m window --grid 3:1:0:1:1:2 # bottom two thirds

ctrl + lcmd - c       : yabai -m window --grid 6:6:1:1:4:4 # center
ctrl + lcmd - 0x24    : yabai -m window --grid 1:1:0:0:1:1 # maximize - return
#                                             <r>:<c>:<sc>:<sr>:<w>:<h>

